<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Quốc kỳ hoặc biểu tượng -->
    <ImageView
        android:id="@+id/imgHinh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Quốc kỳ"/>

    <!-- Đoạn text thể hiện loại ngoại tệ -->
    <TextView
        android:id="@+id/txtType"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:text="USD"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:gravity="center_vertical|center_horizontal"
        android:paddingEnd="8dp"/>

    <!-- Khung các giá trị Tygia -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMuaTM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MuaTM: 0"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:paddingEnd="12dp" />

            <TextView
                android:id="@+id/txtBanTM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BanTM: 0"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:paddingEnd="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtMuaCK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MuaCK: 0"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:paddingEnd="12dp" />

            <TextView
                android:id="@+id/txtBanCK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BanCK: 0"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:paddingEnd="12dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
